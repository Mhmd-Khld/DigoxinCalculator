<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:fillViewport="true"
    tools:context=".NotesActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="4dp"  android:paddingEnd="4dp"    android:paddingTop="0dp"
        android:paddingBottom="20dp"
        android:gravity="center_horizontal|center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clinical Guidelines Menu"
            android:textSize="26sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="16dp"
            android:textColor="#1976D2" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DDDDDD"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="24dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="4dp"  android:orientation="vertical"
                android:gravity="center_horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_kidney"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="6dp"
                    app:cardBackgroundColor="#E6F2FF"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_marginBottom="4dp"
                    android:background="?attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <androidx.cardview.widget.CardView
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            app:cardCornerRadius="15dp"
                            app:cardElevation="0dp"
                            android:layout_margin="10dp">
                            <ImageView
                                android:id="@+id/kidneyImage"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/ic_kidney"
                                android:scaleType="centerCrop"
                                android:contentDescription="Kidney Disorders Guide" />
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/kidneyText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Renal Adjustment"
                    android:textColor="#5D4037"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="4dp"  android:orientation="vertical"
                android:gravity="center_horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_elderly"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="6dp"
                    app:cardBackgroundColor="#FFF8EB"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_marginBottom="4dp"
                    android:background="?attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <androidx.cardview.widget.CardView
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            app:cardCornerRadius="15dp"
                            app:cardElevation="0dp"
                            android:layout_margin="10dp">
                            <ImageView
                                android:id="@+id/elderlyDosingImage"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/ic_elderly"
                                android:scaleType="centerCrop"
                                android:contentDescription="Elderly Dosing Guide" />
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/elderlyDosingText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Elderly (> 75 y)"
                    android:textColor="#F57C00"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="4dp"  android:orientation="vertical"
                android:gravity="center_horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_electrolytes"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="6dp"
                    app:cardBackgroundColor="#FFF0F0"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_marginBottom="4dp"
                    android:background="?attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <androidx.cardview.widget.CardView
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            app:cardCornerRadius="15dp"
                            app:cardElevation="0dp"
                            android:layout_margin="10dp">
                            <ImageView
                                android:id="@+id/electrolytesImage"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/ic_electrolytes"
                                android:scaleType="centerCrop"
                                android:contentDescription="Hyper &amp; Hypo Electrolytes Guide" />
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/electrolytesText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Electrolyte Balance"
                    android:textColor="#D32F2F"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="4dp"  android:orientation="vertical"
                android:gravity="center_horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_git"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="6dp"
                    app:cardBackgroundColor="#F3FFF0"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_marginBottom="4dp"
                    android:background="?attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <androidx.cardview.widget.CardView
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            app:cardCornerRadius="15dp"
                            app:cardElevation="0dp"
                            android:layout_margin="10dp">
                            <ImageView
                                android:id="@+id/gitDisordersImage"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/ic_git_disorders"
                                android:scaleType="centerCrop"
                                android:contentDescription="GIT Disorders Guide" />
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/gitDisordersText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GIT Disorders"
                    android:textColor="#388E3C"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="4dp"  android:orientation="vertical"
                android:gravity="center_horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_pregnancy"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="6dp"
                    app:cardBackgroundColor="#FFF0F5"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_marginBottom="4dp"
                    android:background="?attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <androidx.cardview.widget.CardView
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            app:cardCornerRadius="15dp"
                            app:cardElevation="0dp"
                            android:layout_margin="10dp">
                            <ImageView
                                android:id="@+id/pregnancyImage"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/ic_pregnancy"
                                android:scaleType="centerCrop"
                                android:contentDescription="Pregnancy Digoxin Guide" />
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/pregnancyText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pregnancy"
                    android:textColor="#E91E63"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="4dp"  android:orientation="vertical"
                android:gravity="center_horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_children"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="6dp"
                    app:cardBackgroundColor="#EAFBFF"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_marginBottom="4dp"
                    android:background="?attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <androidx.cardview.widget.CardView
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            app:cardCornerRadius="15dp"
                            app:cardElevation="0dp"
                            android:layout_margin="10dp">
                            <ImageView
                                android:id="@+id/childrenNewbornsImage"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/ic_children_newborns"
                                android:scaleType="centerCrop"
                                android:contentDescription="Children and Newborns Dosage Guide" />
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/childrenNewbornsText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Children &amp; Newborns"
                    android:textColor="#0288D1"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"/>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
</ScrollView>