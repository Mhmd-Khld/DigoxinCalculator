<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="end">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            android:elevation="4dp"/>

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F5F5F5"
            tools:context=".MainActivity">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:layout_marginHorizontal="9dp"  app:cardCornerRadius="25dp"
                    app:cardElevation="6dp"
                    android:layout_marginTop="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="24dp">

                        <TextView android:text="Patient Parameters"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="24dp"
                            android:textColor="@color/colorTextDark"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Age (years)"
                            app:boxCornerRadiusTopStart="17dp" app:boxCornerRadiusTopEnd="17dp" app:boxCornerRadiusBottomStart="17dp" app:boxCornerRadiusBottomEnd="17dp"
                            app:boxStrokeColor="@color/colorPrimary" app:hintTextColor="@color/colorPrimary" android:layout_marginBottom="16dp">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/ageEditText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="number"/>
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Weight (kg)"
                            app:boxCornerRadiusTopStart="17dp" app:boxCornerRadiusTopEnd="17dp" app:boxCornerRadiusBottomStart="17dp" app:boxCornerRadiusBottomEnd="17dp"
                            app:boxStrokeColor="@color/colorPrimary" app:hintTextColor="@color/colorPrimary" android:layout_marginBottom="16dp">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/weightEditText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="numberDecimal"/>
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Height (cm)"
                            app:boxCornerRadiusTopStart="17dp" app:boxCornerRadiusTopEnd="17dp" app:boxCornerRadiusBottomStart="17dp" app:boxCornerRadiusBottomEnd="17dp"
                            app:boxStrokeColor="@color/colorPrimary" app:hintTextColor="@color/colorPrimary" android:layout_marginBottom="16dp">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/heightEditText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="number"/>
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Serum Creatinine (mg/dL)"
                            app:boxCornerRadiusTopStart="17dp" app:boxCornerRadiusTopEnd="17dp" app:boxCornerRadiusBottomStart="17dp" app:boxCornerRadiusBottomEnd="17dp"
                            app:boxStrokeColor="@color/colorPrimary" app:hintTextColor="@color/colorPrimary" android:layout_marginBottom="16dp">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/creatinineEditText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="numberDecimal"/>
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Cp0 (mg/L)"
                            app:boxCornerRadiusTopStart="17dp" app:boxCornerRadiusTopEnd="17dp" app:boxCornerRadiusBottomStart="17dp" app:boxCornerRadiusBottomEnd="17dp"
                            app:boxStrokeColor="@color/colorPrimary" app:hintTextColor="@color/colorPrimary" android:layout_marginBottom="24dp">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/cssEditText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="numberDecimal"/>
                        </com.google.android.material.textfield.TextInputLayout>

                        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#E0E0E0" android:layout_marginBottom="16dp" android:layout_marginHorizontal="8dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Gender"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/colorTextDark"
                            android:layout_marginTop="8dp"
                            android:layout_marginStart="0dp"
                            android:layout_marginBottom="12dp"
                            android:fontFamily="sans-serif-medium"/>

                        <com.google.android.material.button.MaterialButtonToggleGroup
                            android:id="@+id/genderToggleGroup"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="0dp"
                            android:layout_marginEnd="0dp"
                            android:layout_marginBottom="24dp"
                            app:singleSelection="true"
                            app:strokeColor="@color/colorOutlineStroke">

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/maleButton"
                                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Male"
                                android:textSize="16sp"
                                android:paddingVertical="14dp"
                                app:cornerRadius="12dp"
                                app:icon="@drawable/ic_male"
                                app:iconTint="@color/colorTextDark"
                                app:iconSize="24dp"  android:textColor="@color/colorTextDark"
                                android:letterSpacing="0.0"/>

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/femaleButton"
                                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Female"
                                android:textSize="16sp"
                                android:paddingVertical="14dp"
                                app:cornerRadius="12dp"
                                app:icon="@drawable/ic_female"
                                app:iconTint="@color/colorTextDark"
                                app:iconSize="24dp"  android:textColor="@color/colorTextDark"
                                android:letterSpacing="0.0"/>
                        </com.google.android.material.button.MaterialButtonToggleGroup>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Diagnosis"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/colorTextDark"
                            android:layout_marginTop="8dp"
                            android:layout_marginStart="0dp"
                            android:layout_marginBottom="12dp"
                            android:fontFamily="sans-serif-medium"/>

                        <com.google.android.material.button.MaterialButtonToggleGroup
                            android:id="@+id/diagnosisToggleGroup"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="0dp"
                            android:layout_marginEnd="0dp"
                            android:layout_marginBottom="24dp"
                            app:singleSelection="true"
                            app:strokeColor="@color/colorOutlineStroke">

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/afButton"
                                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="AF"
                                android:textSize="16sp"
                                android:paddingVertical="14dp"
                                app:cornerRadius="12dp" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/bothButton"
                                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Both"
                                android:textSize="16sp"
                                android:paddingVertical="14dp"
                                app:cornerRadius="12dp" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/chfButton"
                                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="CHF"
                                android:textSize="16sp"
                                android:paddingVertical="14dp"
                                app:cornerRadius="12dp" />

                        </com.google.android.material.button.MaterialButtonToggleGroup>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Route"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/colorTextDark"
                            android:layout_marginTop="8dp"
                            android:layout_marginStart="0dp"
                            android:layout_marginBottom="12dp"
                            android:fontFamily="sans-serif-medium"/>

                        <com.google.android.material.button.MaterialButtonToggleGroup
                            android:id="@+id/routeToggleGroup"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="0dp"
                            android:layout_marginEnd="0dp"
                            android:layout_marginBottom="16dp"
                            app:singleSelection="true"
                            app:strokeColor="@color/colorOutlineStroke">

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/ivButton"
                                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="IV"
                                android:textSize="16sp"
                                android:paddingVertical="14dp"
                                app:cornerRadius="12dp" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/oralButton"
                                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Oral"
                                android:textSize="16sp"
                                android:paddingVertical="14dp"
                                app:cornerRadius="12dp" />

                        </com.google.android.material.button.MaterialButtonToggleGroup>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:layout_marginHorizontal="9dp"  app:cardCornerRadius="25dp"
                    app:cardElevation="6dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="24dp">

                        <TextView android:text="Additional PK Parameters "
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="24dp"
                            android:textColor="@color/colorTextDark"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-medium"/>

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="K (Rate of elimination)"
                            app:boxCornerRadiusTopStart="17dp" app:boxCornerRadiusTopEnd="17dp" app:boxCornerRadiusBottomStart="17dp" app:boxCornerRadiusBottomEnd="17dp"
                            app:boxStrokeColor="@color/colorPrimary" app:hintTextColor="@color/colorPrimary" android:layout_marginBottom="16dp">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/kRateEditText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="numberDecimal"/>
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="A (Intercept)"
                            app:boxCornerRadiusTopStart="17dp" app:boxCornerRadiusTopEnd="17dp" app:boxCornerRadiusBottomStart="17dp" app:boxCornerRadiusBottomEnd="17dp"
                            app:boxStrokeColor="@color/colorPrimary" app:hintTextColor="@color/colorPrimary" android:layout_marginBottom="16dp">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/interceptAEditText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="numberDecimal"/>
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="T 1/2 a"
                            app:boxCornerRadiusTopStart="17dp" app:boxCornerRadiusTopEnd="17dp" app:boxCornerRadiusBottomStart="17dp" app:boxCornerRadiusBottomEnd="17dp"
                            app:boxStrokeColor="@color/colorPrimary" app:hintTextColor="@color/colorPrimary" android:layout_marginBottom="16dp">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/tHalfAEditText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="numberDecimal"/>
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="T 1/2 b"
                            app:boxCornerRadiusTopStart="17dp" app:boxCornerRadiusTopEnd="17dp" app:boxCornerRadiusBottomStart="17dp" app:boxCornerRadiusBottomEnd="17dp"
                            app:boxStrokeColor="@color/colorPrimary" app:hintTextColor="@color/colorPrimary">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/tHalfBEditText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="numberDecimal"/>
                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/calculateButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CALCULATE DOSE"
                    android:paddingVertical="14dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginHorizontal="16dp"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:backgroundTint="@color/colorPrimary"
                    app:cornerRadius="18dp"
                    android:elevation="8dp"
                    android:layout_gravity="center_horizontal"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/resetButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Reset"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:paddingVertical="14dp"
                    android:backgroundTint="@color/colorError"
                    app:cornerRadius="18dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="24dp"
                    android:layout_marginHorizontal="16dp"
                    android:layout_gravity="center_horizontal" />


                <TextView
                    android:id="@+id/errorTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorError"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    android:visibility="gone"
                    android:textSize="18sp"
                    android:fontFamily="sans-serif-medium"
                    tools:text="Please fill in all required fields"/>

                <LinearLayout
                    android:id="@+id/resultsLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="32dp"
                    android:paddingBottom="50dp"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:layout_marginHorizontal="16dp"  app:cardCornerRadius="16dp"
                        app:cardElevation="6dp"
                        app:cardBackgroundColor="@color/cardBgDosing">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="20dp">
                            <TextView android:text="1. Dosing Information" android:textStyle="bold" android:textSize="18sp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="@color/colorPrimary" android:fontFamily="sans-serif-medium"/>
                            <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#B3E5FC" android:layout_marginTop="4dp" android:layout_marginBottom="12dp"/>

                            <TextView android:id="@+id/resultWeightTextView" android:layout_width="match_parent" android:layout_height="wrap_content" android:textColor="#333" android:textStyle="bold" android:layout_marginBottom="8dp" android:textSize="16sp" tools:text="Patient Weight: 70.5 kg"/>

                            <TextView android:text="Maintenance Dose:" android:textStyle="bold" android:layout_width="wrap_content" android:layout_height="wrap_content" android:fontFamily="sans-serif-medium"/>
                            <TextView android:id="@+id/resultMcgTextView" android:layout_width="match_parent" android:layout_height="wrap_content" android:textSize="28sp" android:textStyle="bold" android:textColor="@color/colorPrimary" android:fontFamily="sans-serif-black" tools:text="125 mcg"/>
                            <TextView android:id="@+id/resultMgTextView" android:layout_width="match_parent" android:layout_height="wrap_content" android:textColor="#555" android:layout_marginBottom="12dp" android:textSize="16sp" tools:text="(0.125 mg)"/>

                            <TextView android:text="Loading Dose:" android:textStyle="bold" android:layout_width="wrap_content" android:layout_height="wrap_content" android:fontFamily="sans-serif-medium"/>
                            <TextView android:id="@+id/resultLdTextView" android:layout_width="match_parent" android:layout_height="wrap_content" android:textSize="22sp" android:textStyle="bold" android:textColor="@color/colorWarning" android:fontFamily="sans-serif-black" android:layout_marginBottom="12dp" tools:text="0.5 mg"/>

                            <TextView android:text="Regimen:" android:textStyle="bold" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:fontFamily="sans-serif-medium"/>
                            <TextView android:id="@+id/resultLdStep1" android:layout_width="match_parent" android:layout_height="wrap_content" android:textColor="#444" android:layout_marginStart="8dp" tools:text="• 50% Initially" android:textSize="15sp"/>
                            <TextView android:id="@+id/resultLdStep2" android:layout_width="match_parent" android:layout_height="wrap_content" android:textColor="#444" android:layout_marginStart="8dp" tools:text="• 25% after 6 hrs" android:textSize="15sp"/>
                            <TextView android:id="@+id/resultLdStep3" android:layout_width="match_parent" android:layout_height="wrap_content" android:textColor="#444" android:layout_marginStart="8dp" tools:text="• 25% after 12 hrs" android:textSize="15sp"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:layout_marginHorizontal="16dp"  app:cardCornerRadius="16dp"
                        app:cardElevation="6dp"
                        app:cardBackgroundColor="@color/cardBgBasicPk">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="20dp">
                            <TextView android:text="2. Basic PK Parameters" android:textStyle="bold" android:textSize="18sp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="#1565C0" android:fontFamily="sans-serif-medium"/>
                            <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#90CAF9" android:layout_marginTop="4dp" android:layout_marginBottom="12dp"/>

                            <TextView android:id="@+id/resultTotalClTextView" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="4dp" android:textColor="#333" android:textSize="15sp" tools:text="Total Cl: 2.5 L/hr"/>
                            <TextView android:id="@+id/resultVdTextView" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="4dp" android:textColor="#333" android:textSize="15sp" tools:text="Vd: 250 L"/>
                            <TextView android:id="@+id/resultKaTextView" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="4dp" android:textColor="#333" android:textSize="15sp" tools:text="Ka: --"/>
                            <TextView android:id="@+id/resultKeTextView" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="4dp" android:textColor="#333" android:textSize="15sp" tools:text="Ke: --"/>
                            <TextView android:id="@+id/resultIbwTextView" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="4dp" android:textColor="#333" android:textSize="15sp" tools:text="IBW: 70 kg"/>
                            <TextView android:id="@+id/resultCrClTextView" android:layout_width="match_parent" android:layout_height="wrap_content" android:textColor="#333" android:textSize="15sp" tools:text="CrCl: 100 mL/min"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"  app:cardCornerRadius="16dp"
                        app:cardElevation="6dp"
                        app:cardBackgroundColor="@color/cardBgClinicalPk">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="20dp">
                            <TextView android:text="3. Clinical PK Parameters" android:textStyle="bold" android:textSize="18sp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="@color/colorWarning" android:fontFamily="sans-serif-medium"/>
                            <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#FFECB3" android:layout_marginTop="4dp" android:layout_marginBottom="12dp"/>

                            <TextView android:id="@+id/resultRouteInfoTextView" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="4dp" android:textColor="#333" android:textSize="15sp" tools:text="Route: Oral (F=0.9)"/>
                            <TextView android:id="@+id/resultHalfLifeTextView" android:layout_width="match_parent"
                                android:layout_height="wrap_content" android:layout_marginBottom="4dp" android:textColor="#333" android:textSize="15sp" tools:text="Half-Life (t1/2): 36 hrs"/>
                            <TextView android:id="@+id/resultAucTextView" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="4dp" android:textColor="#333" android:textSize="15sp" tools:text="AUC: 500"/>
                            <TextView android:id="@+id/resultTmaxTextView" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="4dp" android:textColor="#333" android:textSize="15sp" tools:text="Tmax: 2 hr"/>
                            <TextView android:id="@+id/resultCmaxTextView" android:layout_width="match_parent" android:layout_height="wrap_content" android:textColor="#333" android:textSize="15sp" tools:text="Cmax: 1.8"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
